@model IEnumerable<PabloCortes_Proyecto1.Models.Vehiculo>

@{
    ViewData["Title"] = "Listado de Vehículos";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear Nuevo Vehículo</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="placaSearch">Buscar por Placa:</label>
        <input type="text" name="placaSearch" id="placaSearch" class="form-control" />
        <input type="submit" value="Buscar" class="btn btn-primary" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Traccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UltimaFechaAtencion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TratamientoNanoCeramico)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Placa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modelo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Traccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UltimaFechaAtencion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TratamientoNanoCeramico)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-placa="@item.Placa">Editar</a> |
                        <a asp-action="Details" asp-route-placa="@item.Placa">Detalles</a> |
                        <a asp-action="Delete" asp-route-placa="@item.Placa">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">No se encontraron vehículos.</td>
            </tr>
        }
    </tbody>
</table>